<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:layout_above="@id/tab_layout"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>
    <View
        android:layout_below="@id/view_pager"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <com.google.android.material.tabs.TabLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:tabIconTint="#76767E"
        app:tabIconTintMode="src_atop"
        app:tabIndicator="@drawable/bogoc"
        app:tabGravity="fill"
        app:tabIndicatorHeight="4dp"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextAppearance="@style/CustomTextAppearanceTab"
        app:tabTextColor="#76767E">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_weather"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:icon="@drawable/cloud_icon"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:text="Weather">

        </com.google.android.material.tabs.TabItem>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"


            android:icon="@drawable/location_icon"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:text="Location">

        </com.google.android.material.tabs.TabItem>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:icon="@drawable/settings_icon"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:text="Setting">

        </com.google.android.material.tabs.TabItem>
    </com.google.android.material.tabs.TabLayout>
</RelativeLayout>